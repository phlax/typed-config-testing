{
    "$id": "https://phlax.github.io/typed-config-testing/example-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "example",
    "type": "object",
    "properties": {
	"name": {
	    "type": "string",
	    "description": "A common property."
	},
	"typed_config": {
	    "type": "object",
	    "description": "Extensible typed config.",
	    "properties": {
		"@type": {
		    "enum": ["type1", "type2"]
		},
		"common_property": {
		    "type": "string"
		}
	    },
	    "if": {
		"properties": { "@type": { "const": "type1" } }
	    },
	    "then": {
		"additionalProperties": {
		    "$ref": "https://phlax.github.io/typed-config-testing/type1-schema.json"
		}
	    }
	}
    }
}
